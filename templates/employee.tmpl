{{template "header.tmpl" "Employee Details"}}

<h2>{{.Name}}</h2>
<div class="editbuttons">
<a href="/editEmployee?eid={{.Eid}}"><button id="empEdit" type="text">Edit</button></a>
</div>
<div class="container">
<table class="basicinfo">
	<tr>
		<td>Eid</td>
		<td>{{.Eid}}</td>
	</tr>
	<tr>
		<td>Name</td>
		<td>{{.Name}}<br /></td>
	</tr>
	<tr>
		<td>Email</td>
		<td>{{.Email}}<br /></td>
	</tr>
	<tr>
		<td>PhoneNo</td>
		<td>{{.PhoneNo}}<br /></td>
	</tr>
</table>
</div>
{{if .Projects }}
<h3>Projects</h3>
{{range .Projects}}
	<div class="project container">
		{{template "projects.tmpl" .}}
	</div>
{{end}}
{{end}}

{{if .WorkExp }}
<h3>Work Experience</h3>
	{{range .WorkExp}}
	<div class="workexp container">
		{{template "workexp.tmpl" .}}
	</div>
	{{end}}
{{end}}

{{if .Training}}
<h3>Training</h3>
	{{range .Training}}
	<div class="training container">
		{{template "training.tmpl" .}}
	</div>
	{{end}}
{{end}}

{{if .Education }}
<h3>Education</h3>
	{{range .Education}}
	<div class="education container">
	{{template "education.tmpl" .}}
	</div>
	{{end}}
{{end}}


{{ if .Skills }}
<h3>Skills</h3>
<ul>
	{{range .Skills}}
	<li><a href="/searchSkill?skills={{.}}">{{.}}</a></li>
	{{end}}
</ul>
{{end}}

{{template "footer.tmpl" }}
